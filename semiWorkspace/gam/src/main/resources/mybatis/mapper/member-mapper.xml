<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.semi.gam.member.mapper.MemberMapper">

    <update id="edit">
        UPDATE MEMBER
        SET
        NICK = #{nick}
        , PHONE = #{phone}
        , ADDRESS = #{address}
        , PROFILE = #{profile}
        <if test="pwd != ''">
            ,PWD = #{pwd}
        </if>
        WHERE ID = #{id}
    </update>


</mapper>